# ==========================================
# GENERAL CONFIGURATION
# ==========================================
TZ=America/Caracas
NODE_ENV=development

# ==========================================
# POSTGRESQL DATABASE
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=onenglishdb
POSTGRES_EXT_PORT=5432

# Database URL for Prisma
DATABASE_URL=postgresql://postgres:your_secure_postgres_password@postgres:5432/onenglishdb?schema=public

# ==========================================
# PGADMIN
# ==========================================
PGADMIN_DEFAULT_EMAIL=admin@onenglish.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password
PGADMIN_PORT=5050

# ==========================================
# MONGODB DATABASE
# ==========================================
MONGO_USERNAME=mongoadmin
MONGO_PASSWORD=your_secure_mongo_password
MONGO_EXT_PORT=27017

# MongoDB Connection String
MONGO_URI=mongodb://mongoadmin:your_secure_mongo_password@mongo:27017/onenglishdb?authSource=admin

# ==========================================
# MONGO EXPRESS
# ==========================================
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=your_secure_mongoexpress_password
MONGO_EXPRESS_PORT=8081

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_EXT_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# ==========================================
# BACKEND APPLICATION
# ==========================================
BACKEND_PORT=3000
API_PREFIX=api
API_VERSION=v1

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@onenglish.com

# ==========================================
# AWS S3 CONFIGURATION (Optional)
# ==========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=onenglish-bucket

# ==========================================
# CLOUDINARY CONFIGURATION (Optional)
# ==========================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==========================================
# RATE LIMITING
# ==========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=debug
